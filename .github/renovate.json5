{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard"
  ],
  "automerge": true,
  "automergeType": "branch",
  "schedule": [ "* * * * 0,6" ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [ "* * * * 0,6" ]
  },
  customManagers: [
    {
      customType: "regex",
      managerFilePatterns: ["^CMakeLists.txt$"],
      matchStrings: [
        'FetchContent_Declare[ \\t]*\\([^)]*GIT_REPOSITORY[ \\t]*"https:\\\/\\\/github\\.com\\\/(?<packageName>[^"]*?)(.git)?"[^)]*GIT_TAG[ \\t]*"(?<currentValue>[^"]*)"'
      ],
      datasourceTemplate: "github-tags",
      versioningTemplate: "loose",
    },
    {
      customType: "regex",
      managerFilePatterns: ["^CMakeLists.txt$"],
      matchStrings: [
        'FetchContent_Declare[ \\t]*\\([^)]*URL[ \\t]*"https:\\\/\\\/github\\.com\\\/(?<packageName>[^"]*)\\\/releases\\\/download\\\/(?<currentValue>[^\/]+)\\\/(?<depName>[^"]*)"'
      ],
      datasourceTemplate: "github-release-attachments",
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["^\\.github\\/workflows\\/.*\\.ya?ml$"],
      "matchStrings": [
        "(container|image):\\s*\"(?<depName>[^:]*):(?<currentValue>[\\w\\.-]+)\""
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
  ],
}
